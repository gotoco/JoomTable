<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>

              <field name="id" type="text" default="0" label="COM_SERVICE_FORM_LBL_PRODUKT_ID"
            readonly="true" class="readonly"
            description="JGLOBAL_FIELD_ID_DESC" /> 

       <field name="created_by" type="createdby" default="" 
            label="COM_SERVICE_FORM_LBL_PRODUKT_CREATED_BY"
            description="COM_SERVICE_FORM_DESC_PRODUKT_CREATED_BY"  /> 

       <field name="name" type="text" size="40" class="inputbox"
        
            label="COM_SERVICE_FORM_LBL_PRODUKT_NAME"
            description="COM_SERVICE_FORM_DESC_PRODUKT_NAME" 
        
        
         required="true" 
        filter="safehtml" /> 

       <field name="category" type="text" size="40" class="inputbox"
        
            label="COM_SERVICE_FORM_LBL_PRODUKT_CATEGORY"
            description="COM_SERVICE_FORM_DESC_PRODUKT_CATEGORY" 
        
        
         required="true" 
        filter="safehtml" /> 

       <field name="price" type="text" size="40" class="inputbox"
        
            label="COM_SERVICE_FORM_LBL_PRODUKT_PRICE"
            description="COM_SERVICE_FORM_DESC_PRODUKT_PRICE" 
        
        
         required="true" 
        filter="safehtml" /> 

       <field name="description" type="text" size="40" class="inputbox"
        
            label="COM_SERVICE_FORM_LBL_PRODUKT_DESCRIPTION"
            description="COM_SERVICE_FORM_DESC_PRODUKT_DESCRIPTION" 
        
        
         required="true" 
        filter="safehtml" /> 

       <field name="active" type="text" size="40" class="inputbox"
        
            label="COM_SERVICE_FORM_LBL_PRODUKT_ACTIVE"
            description="COM_SERVICE_FORM_DESC_PRODUKT_ACTIVE" 
         default="1" 
         validate="boolean" 
         required="true" 
        filter="safehtml" /> 

         <field
        name="state"
        type="list"
        label="JSTATUS"
        description="JFIELD_PUBLISHED_DESC"
        class="inputbox"
        size="1"
        default="1">
        <option value="1">JPUBLISHED</option>
        <option value="0">JUNPUBLISHED</option>
    </field> 

                        <field name="checked_out" type="hidden" filter="unset" />
        <field name="checked_out_time" type="hidden" filter="unset" /> 

 </fieldset> 

 <fieldset 
                        name="accesscontrol">
                       <field name="asset_id" type="hidden" filter="unset" />
                       <field name="rules"
                            type="rules"
                            label="JFIELD_RULES_LABEL"
                            translate_label="false"
                            filter="rules"
                            validate="rules"
                            class="inputbox"
                            component="com_service"
                            section="produkt"
                        />

	</fieldset>

</form>
